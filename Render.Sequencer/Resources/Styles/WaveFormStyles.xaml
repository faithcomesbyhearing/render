<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="Render.Sequencer.Resources.Styles.WaveFormStyles"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:atomic="clr-namespace:Render.Sequencer.Resources.Atomic"
                    xmlns:controls="clr-namespace:Render.Sequencer.Core.Controls">
    <ResourceDictionary.MergedDictionaries>
        <atomic:Colors />
        <atomic:Sizes />
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="MainScrollViewStyle" TargetType="ScrollView">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Never" />
        <Setter Property="IsEnabled" Value="True" />
    </Style>

    <Style x:Key="MainScrubberStyle" TargetType="controls:Scrubber">
        <Setter Property="Padding" Value="{StaticResource MainScrubberPlayerMargin}" />
        <Setter Property="ScrubberColor" Value="{StaticResource Accent}" />
        <Setter Property="ThumbVisualWidth" Value="6" />
    </Style>
</ResourceDictionary>