<?xml version="1.0" encoding="utf-8"?>

<rxui:ReactiveContentView x:TypeArguments="consultantCheck:MenuButtonViewModel"
                          xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:rxui="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
                          xmlns:consultantCheck="clr-namespace:Render.Components.Consultant.ConsultantCheck;assembly=Render"
                          x:Class="Render.Components.Consultant.ConsultantCheck.MenuButton"
                          x:DataType="consultantCheck:MenuButtonViewModel">
    <ContentView.Content>
        <Border Padding="5"
                StrokeShape="RoundRectangle 5"
                x:Name="Border"
                AutomationId="ConsultantCheckModeBorder">
            <Label
                x:Name="Label"
                AutomationId="{Binding AutomationId}"
                FontAttributes="Bold"
                FontSize="{StaticResource SmallFont}">
            </Label>
            <Border.GestureRecognizers>
                <TapGestureRecognizer x:Name="BorderTap" />
            </Border.GestureRecognizers>
        </Border>
    </ContentView.Content>
</rxui:ReactiveContentView>