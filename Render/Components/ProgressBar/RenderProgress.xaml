<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Render.Components.ProgressBar.RenderProgress">

    <AbsoluteLayout WidthRequest="640" HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center">
        <Frame Padding="0" BackgroundColor="{DynamicResource LightGrey}"
               Margin="0,3,0,0"
               AbsoluteLayout.LayoutBounds="0,0,1,16"
               AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
               CornerRadius="10"
               x:Name="ProgressContainer">
            <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Frame AbsoluteLayout.LayoutBounds="0,0,1,16" AbsoluteLayout.LayoutFlags="All"
                       x:Name="ProgressBar"
                       BackgroundColor="Green">
                </Frame>
            </AbsoluteLayout>
        </Frame>
    </AbsoluteLayout>
</ContentView>