<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="DraftPicker" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{DynamicResource ToolbarBackground}"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="{DynamicResource SmallFont}"/>
        <Setter Property="TextColor" Value="{DynamicResource MainText}"/>
    </Style>

</ResourceDictionary>